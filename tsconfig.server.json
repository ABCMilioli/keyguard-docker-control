{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express", "node"]
  },
  "include": ["src/server.ts", "src/api/**/*", "src/types/**/*"],
  "exclude": ["src/components/**/*", "src/pages/**/*", "src/main.tsx"]
} 